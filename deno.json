{
  "name": "@jollytoad/worker-broker",
  "version": "0.3.0",
  "license": "MIT",
  "exports": {
    "./broker": "./broker/mod.ts",
    "./worker": "./worker/mod.ts",
    "./debug": "./internal/debug.ts"
  },
  "unstable": ["worker-options"],
  "tasks": {
    "start": "./test/server.ts",
    "test": "deno test --allow-read --allow-net",
    "check": "deno check **/*.ts",
    "lint": "deno lint && deno doc --lint broker/*.ts worker/*.ts",
    "ok": "deno fmt && deno task lint && deno task check && deno task test && deno publish --dry-run --allow-dirty",
    "lock": "rm deno.lock && deno install && deno task check && deno task test"
  },
  "imports": {
    "@http/host-deno-local": "jsr:@http/host-deno-local@^0.25.0",
    "@http/response": "jsr:@http/response@^0.25.0",
    "@http/route": "jsr:@http/route@^0.25.0",
    "@std/assert": "jsr:@std/assert@^1.0.11"
  }
}
